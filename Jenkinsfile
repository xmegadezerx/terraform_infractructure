pipeline {
  agent any
  options {
    skipDefaultCheckout(true)
  }
  stages{
    stage('clean workspace') {
      steps {
        cleanWs()
      }
    }
    stage('checkout') {
      steps {
        checkout scm
      }
    }

stage('Set Terraform path') {
 steps {
 script {
 def tfHome = tool name: 'Terraform'
 env.PATH = “${tfHome}:${env.PATH}”
 }
 sh 'terraform — version'
 
 
 }
 }
    
    stage('terraform') {
      steps {
        sh "terraform apply -auto-approve plan -no-color"
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}